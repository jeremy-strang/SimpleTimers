<UserControl x:Class="SimpleTimers.Controls.GameTimer"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SimpleTimers.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="80" d:DesignWidth="400">
    <Grid>
        <StackPanel Name="timerWrap" VerticalAlignment="Top">
            <TextBlock Name="timerLabel"
                   HorizontalAlignment="Left" 
                   VerticalAlignment="Top"
                   FontSize="14"
                   Foreground="white"/>
            <Grid Name="timer1">
                <ProgressBar Name="progressBar" Height="20" Maximum="100" Background="#FF48E585" Foreground="#FF737373"/>
                <TextBlock Name="timeText" HorizontalAlignment="Center" VerticalAlignment="Center"/>
            </Grid>
        </StackPanel>
    </Grid>
</UserControl>
